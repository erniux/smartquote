FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /workspace

# Requisitos del AI Agent
COPY ai_agent/requirements.txt /workspace/requirements.txt
RUN pip install --upgrade pip && pip install --no-cache-dir -r requirements.txt

RUN playwright install --with-deps
# (El código se montará como volumen; copiamos por si se quiere buildar sin volúmenes)
COPY ai_agent /workspace/ai_agent

ENV PYTHONPATH=/workspace

# Útil para esperar al server de Ollama si quisieras implementar healthchecks
RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Sin EXPOSE – el agente no publica puerto
