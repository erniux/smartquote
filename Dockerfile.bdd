# ===============================
FROM mcr.microsoft.com/playwright/python:v1.45.0

WORKDIR /app

# Copiar dependencias
COPY ./bdd/requirements.txt /app/bdd/requirements.txt

RUN pip install --no-cache-dir -r /app/bdd/requirements.txt

# Instalar pytest y pytest-bdd
RUN pip install pytest pytest-bdd pytest-playwright requests

# Instalar playwright browsers
RUN playwright install 

# Variables de entorno
ENV PYTHONUNBUFFERED=1
ENV OLLAMA_BASE_URL=http://ollama:11434

# Copiar todo el proyecto BDD
COPY ./bdd /app/bdd

WORKDIR /app/bdd

# Comando por defecto: ejecutar pruebas
CMD ["pytest", "-v"]
